# CompliancePulse Configuration (Example)
# Safe example values for local dev/testing. Copy to .env and adjust.

# Runtime environment: development | production
ENVIRONMENT=development

# Database connection URL
# Examples:
# - SQLite: sqlite:////app/data/compliancepulse.db
# - PostgreSQL: postgresql+psycopg://user:pass@db:5432/compliancepulse
DB_URL=sqlite:////app/data/compliancepulse.db

# Session and API security
# Strong, random values required in production
SESSION_SECRET_KEY=dev-session-key
API_KEY_HASH_SALT=dev-api-salt
STRIPE_WEBHOOK_SECRET=

# CORS settings (comma-separated list)
ALLOWED_ORIGINS=*

# Service directories (override if needed)
DATA_DIR=/app/data
LOGS_DIR=/app/logs
ARTIFACTS_DIR=/app/artifacts
FRONTEND_TEMPLATES=/app/frontend/templates
FRONTEND_STATIC=/app/frontend/static

# Session cookie settings
SESSION_COOKIE_NAME=cp_session
SESSION_MAX_AGE=604800
SESSION_BACKEND=memory
SESSION_SECURE_COOKIE=false
CSRF_HEADER_NAME=X-CSRF-Token

# Security and rate limits
SECURITY_LOG_LEVEL=INFO
SECURITY_TEST_MODE=0
ALLOWED_COMMANDS=cat,grep,rpm,dpkg,stat,systemctl,test
MAX_SCAN_RUNTIME_PER_JOB=900
MAX_CONCURRENT_JOBS_PER_ORG=3
API_KEY_RATE_LIMIT=1000
API_KEY_RATE_WINDOW_SECONDS=3600

# Optional Redis URL (session/rate-limit backends)
REDIS_URL=

# Uvicorn/Gunicorn workers
WEB_CONCURRENCY=2
