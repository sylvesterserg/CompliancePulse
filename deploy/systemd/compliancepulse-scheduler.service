[Unit]
Description=CompliancePulse Schedule Manager
After=network.target
Requires=network.target

[Service]
Type=simple
WorkingDirectory=/opt/compliancepulse/backend
Environment=PYTHONPATH=/opt/compliancepulse/backend
Environment=SESSION_SECRET=changeme-super-secret
ExecStart=/usr/bin/python3 /opt/compliancepulse/backend/scheduler_service.py
Restart=always
RestartSec=5
User=compliance
Group=compliance

[Install]
WantedBy=multi-user.target
